# Environment Configuration Template
# Copy this file to .env and update with your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://username:password@localhost:5432/cybersec_club
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# Generate a secure random key for production (minimum 32 characters)
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-key-minimum-32-characters-CHANGE-THIS-IN-PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRATION_SECONDS=3600

# Argon2 Password Hashing Parameters
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=4

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:5500

# Allowed origins (comma-separated)
# For production, update to your actual frontend domain
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# ==========================================
# SERVER CONFIGURATION
# ==========================================
HOST=0.0.0.0
PORT=8000
DEBUG=True

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=True

# ==========================================
# PRODUCTION NOTES
# ==========================================
# Before deploying to production:
# 1. Change JWT_SECRET_KEY to a strong random value
# 2. Set DEBUG=False
# 3. Update ALLOWED_ORIGINS to your production frontend URL
# 4. Update DATABASE_URL to your production database
# 5. Use HTTPS URLs in production
# 6. Review and update all security settings
